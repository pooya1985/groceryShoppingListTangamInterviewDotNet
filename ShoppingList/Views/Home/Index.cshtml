@model List<ShoppingList.Models.List>

@{
    ViewBag.Title = "Home Page";
}
<h3>Latest Lists:</h3>
<ol class="round">
    @if (Model != null)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <li class="@(i==0?"one":i==1?"two":i==2?"three":i==3?"four":"five")">
                <h5>@Model[i].Name</h5>
                @Model[i].RemainedItems Items Left
                <a href="@Url.Action("Details","List",new{id=Model[i].Id})">Items</a>
            </li>
        }
    }
</ol>
